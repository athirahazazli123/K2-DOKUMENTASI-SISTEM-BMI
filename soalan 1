// ConsoleApplication1.cpp : This file contains the 'main' function. Program execution begins and ends there.
//

#include <iostream> 
#include <vector>
#include <algorithm>
using namespace std; 

int main() { 
	int i,c ,b, a[11],largest[11],smallest[11],totals;
	totals = 0;

		for (i = 0; i < 10; i++) { 
			cout << "Enter 3 numbers for row " << i + 1 << " : ";
			cin >> a[i]; cout << endl;	
		}

		largest[10] = a[10];

		for (b = 0; b < 10; b++) {
			if (largest[b] > b) {
				cout << "Largest Number :" << b[largest];
			}
			else {
				cout << "No tak keluar :" << b[largest];
			}
			totals += b[largest];
		}
		smallest[10] = a[10];
		for (c = 0; c < 10; c++) {
			if (smallest[c] > c) {
				cout << "Smallest Number :" << c[smallest];
			}
			else {
				cout << "No tak keluar :" << b[largest];
			}
		}
		cout << "Total Number :" << totals;
	
		return 0;
}
